
jobs:

{{#each resources.images}}
### Fetch: {{name}} ###
- name: copy_{{name}}_to_s3
  plan:
  - get: {{name}}
    trigger: true
  - task: create_{{name}}_tarball
    config:
      platform: linux
      image_resource:
        type: registry-image
        source:
          repository: realorko/aws-cli
      inputs: 
      - name: {{name}}
      run:
        path: bash
        args:
        - -euc
        - |
          pushd {{name}}
          tar -cvf ../{{name}}_tarball/{{name}}.tar.gz *
          popd
      outputs: 
      - name: {{name}}_tarball
  - task: push_{{name}}_tarball_to_s3
    config:
      platform: linux
      image_resource:
        type: registry-image
        source:
          repository: realorko/aws-cli
      inputs: 
      - name: {{name}}_tarball
      run:
        path: bash
        args:
        - -euc
        - |
          export DEBIAN_FRONTEND=noninteractive
          export AWS_DEFAULT_REGION=((aws_default_region))
          export AWS_ACCESS_KEY_ID=((aws_access_key_id))
          export AWS_SECRET_ACCESS_KEY=((aws_secret_access_key))
          aws sts get-caller-identity
          aws s3 cp {{name}}_tarball/{{name}}.tar.gz s3://((aws_s3_bucket_name))/

{{/each}}

{{#each resources.git}}
### Fetch: {{name}} ###
- name: copy_{{name}}_to_s3
  serial: true
  plan:
  - get: {{name}}
    trigger: true
  - get: {{name}}_semver
    params: 
      bump: patch
  - task: create_{{name}}_tarball
    config:
      platform: linux
      image_resource:
        type: registry-image
        source:
          repository: realorko/aws-cli
      inputs: 
      - name: {{name}}
      run:
        path: bash
        args:
        - -euc
        - |
          pushd {{name}}
          tar -cvf ../{{name}}_tarball/{{name}}.tar.gz *
          popd
      outputs:
      - name: {{name}}_tarball
  - task: push_{{name}}_tarball_to_s3
    config:
      platform: linux
      image_resource:
        type: registry-image
        source:
          repository: realorko/aws-cli
      inputs: 
      - name: {{name}}_tarball
      - name: {{name}}_semver
      run:
        path: bash
        args:
        - -euc
        - |
          export DEBIAN_FRONTEND=noninteractive
          export AWS_DEFAULT_REGION=((aws_default_region))
          export AWS_ACCESS_KEY_ID=((aws_access_key_id))
          export AWS_SECRET_ACCESS_KEY=((aws_secret_access_key))
          aws sts get-caller-identity
          aws s3 cp {{name}}_tarball/{{name}}.tar.gz s3://((aws_s3_bucket_name))/
          cp {{name}}_semver/version {{name}}_semver/{{name}}.tar.gz.version
          aws s3 cp {{name}}_semver/{{name}}.tar.gz.version s3://((aws_s3_bucket_name))/
  - put: {{name}}_semver
    params: 
      bump: patch

{{/each}}

resources:

{{#each resources.images}}
### Image: {{name}} ###
- name: {{name}}
  type: registry-image
  source:
    repository: {{repository}}
    {{#if username}}
    username: {{username}}
    {{/if}}
    {{#if password}}
    password: {{password}}
    {{/if}}
{{/each}}

{{#each resources.git}}
### Git: {{name}} ###
- name: {{name}}
  type: git
  source:
    branch: {{branch}}
    private_key: {{private_key}}
    uri: {{uri}}
    {{#if paths}}
    paths:
    {{#each paths}}
    - {{this}}
    {{/each}}
    {{/if}}
    {{#if ignore_paths}}
    ignore_paths:
    {{#each ignore_paths}}
    - {{this}}
    {{/each}}
    {{/if}}

{{/each}}

{{#each resources.git}}
### Semver: {{name}} ###
- name: {{name}}_semver
  type: semver
  source:
    driver: git
    branch: {{version_branch}}
    uri: {{uri}}
    file: {{name}}_version
    private_key: |
      {{private_key}}

{{/each}}
